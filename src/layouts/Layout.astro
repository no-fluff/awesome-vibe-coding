---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="A curated list of awesome vibe coding tools and resources" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="app-shell">
      <slot />
    </div>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
  </body>
</html>

<style is:global>
  :root {
    --font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'Inter', 'Segoe UI', Helvetica, Arial, sans-serif;
    --page-bg: #0a0a0a;
    --page-text: #f5f5f5;
    --page-muted: #a3a3a3;
    --page-border: rgba(255, 255, 255, 0.08);
    --page-accent: #14b8a6;
    --page-accent-dark: #0d9488;
    --page-gold: #fbbf24;
    --page-gold-dark: #f59e0b;
    --surface-bg: rgba(255, 255, 255, 0.03);
    --surface-hover: rgba(255, 255, 255, 0.06);
    --surface-border: rgba(255, 255, 255, 0.1);
  }

  body {
    margin: 0;
    background: var(--page-bg);
    color: var(--page-text);
    font-family: var(--font-family);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
  }

  * {
    box-sizing: border-box;
  }

  a {
    color: var(--page-accent);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  a:hover {
    color: var(--page-accent-dark);
  }

  h1, h2, h3, h4, h5, h6 {
    margin: 0;
    font-weight: 600;
    line-height: 1.2;
  }

  p {
    margin: 0;
  }

  .app-shell {
    min-height: 100vh;
    background: var(--page-bg);
    position: relative;
  }

  .app-shell::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 100vh;
    background: 
      radial-gradient(ellipse at top, rgba(20, 184, 166, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at bottom right, rgba(251, 191, 36, 0.1) 0%, transparent 50%);
    pointer-events: none;
    z-index: 0;
  }
</style>
